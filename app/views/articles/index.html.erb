<% flash.each do |name, msg| %>
<div class='alert alert-<%="#{name}"%> alert-dismissible fade show' role="alert">
  <%= msg %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% end %>

<h1>List Articles</h1>
<p><%= link_to "Create new article", new_article_path, class: "btn btn-primary btn-sm" %></p>
<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>User</th>
    <th>&nbsp</th>
  </tr>
  <% @article.each do |article| %>
  <tr>
  	<td><%= link_to article.title, article_path(article) %></td>
  	<td><%= truncate(article.description, length: 100) %></td>
    <td><%= article.user.username %></td>
  	<td><%= link_to "Edit", edit_article_path(article), class: "btn btn-warning btn-sm" %> <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "are you sure?"}, class: "btn btn-danger btn-sm"  %></td>
  </tr>
  <% end %>
</table>